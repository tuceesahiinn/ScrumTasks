@model YazilimSinamaStarsUpPlanner.Models.Entity.Gorevler
@{
    ViewBag.Title = "GorevGetir";
    Layout = "~/Views/Shared/KullaniciLayout.cshtml";
}


@using (Html.BeginForm("GorevGuncelle", "Gorev", FormMethod.Post))
{
    <div></div>
    <div class="form-group" style="margin-top:20px; margin-bottom:20px; margin-left:20px; margin-right:20px;">
        <div style="margin-bottom:15px">
            <label>Görev Id</label>
            @Html.TextBoxFor(k => k.GorevId, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Görev Adı</label>
            @Html.TextBoxFor(k => k.GorevAdi, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Açıklama</label>
            @Html.TextAreaFor(k => k.Aciklama, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Notlar</label>
            @Html.TextAreaFor(k => k.Notlar, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Tarih</label>
            @Html.TextBoxFor(k => k.GorevTarih, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Tahmini Tarih</label>
            @Html.TextBoxFor(k => k.TahminiTarih, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Gerçekleşen Tarih</label>
            @Html.TextBoxFor(k => k.GerceklesenTarih, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        </div>
        @*<div style="margin-bottom:15px">
            <label>Kullanıcı</label>
            @Html.DropDownListFor(k => k.Kullanicilar.Ad+k.Kullanicilar.Soyad, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" });;
        </div>*@
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

